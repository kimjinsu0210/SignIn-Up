{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/pages/payment/index.js",
    "src/pages/payment/Fail.jsx",
    "src/pages/payment/Checkout.jsx",
    "src/pages/payment/Success.jsx",
    "src/pages/payment/server.js",
    "src/pages/payment/payments.service.js",
    "src/pages/payment/payments.router.js",
    "src/pages/payment/payments.controller.js",
    "src/pages/payment/PaymentForm.tsx",
    "src/pages/sandbox/index.js",
    "src/components/Checkout.jsx",
    "src/pages/payment/sandbox/Payment.jsx",
    "src/pages/payment/sandbox/Success.jsx",
    "src/pages/payment/sandbox/server.js",
    "src/pages/payment/sandbox/payments.service.js",
    "src/pages/payment/sandbox/payments.router.js",
    "src/pages/payment/sandbox/payments.controller.js",
    "src/pages/payment/sandbox/Fail.jsx"
  ],
  "exclude": ["node_modules"]
}
